{
  "name": "redstone-smartcontracts-assemblyscript-tmpl",
  "version": "0.0.1",
  "description": "RedStone SmartWeave wasm assemblyscript contract template",
  "main": "index.js",
  "author": "Redstone Team <dev@redstone.finance>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "asbuild": "asc assembly/contract.ts --runtime stub --exportRuntime --transform ./ContractTransform --exportTable --target release",
    "asbuild:debug": "asc assembly/contract.ts --runtime stub --exportRuntime --transform ./ContractTransform --exportTable --target debug",
    "deploy:local": "yarn asbuild && node deploy/local/deploy-local.js",
    "deploy:testnet": "yarn asbuild && node deploy/testnet/deploy-test.js",
    "deploy:mainnet": "yarn asbuild && node deploy/mainnet/deploy-mainnet.js",
    "read:local": "node deploy/local/read-contract-state-local.js",
    "read:testnet": "node deploy/testnet/read-contract-state-testnet.js",
    "read:mainnet": "node deploy/mainnet/read-contract-state-mainnet.js",
    "transfer:local": "node deploy/local/interact-transfer-local.js",
    "transfer:testnet": "node deploy/testnet/interact-transfer-testnet.js",
    "transfer:mainnet": "node deploy/mainnet/interact-transfer-mainnet.js",
    "balance:local": "node deploy/local/interact-balance-local.js",
    "balance:testnet": "node deploy/testnet/interact-balance-testnet.js",
    "balance:mainnet": "node deploy/mainnet/interact-balance-mainnet.js",
    "test": "jest"
  },
  "engines": {
    "node": ">=16.5"
  },
  "dependencies": {
    "@serial-as/json": "^1.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@assemblyscript/loader": "0.19.23",
    "@types/jest": "^27.4.1",
    "arlocal": "1.1.30",
    "arweave": "^1.10.23",
    "assemblyscript": "^0.19.23",
    "asyncify-wasm": "^1.2.1",
    "jest": "^27.5.1",
    "redstone-smartweave": "0.4.53",
    "ts-jest": "^27.1.3",
    "visitor-as": "^0.8.0"
  }
}
