{
  "name": "redstone-smartcontracts-go-tmpl",
  "version": "0.0.1",
  "description": "RedStone SmartWeave go assemblyscript contract template",
  "main": "index.js",
  "author": "Redstone Team <dev@redstone.finance>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "generate": "easyjson -all src/types/types.go",
    "build": "yarn generate && mkdir -p .out && tinygo build -o .out/go-contract.wasm -no-debug -target wasm src/main.go",
    "build:debug": "yarn generate && mkdir -p .out && tinygo build -o .out/go-contract-debug.wasm -target wasm src/main.go",
    "deploy:local": "yarn build && node deploy/local/deploy-local.js",
    "deploy:testnet": "yarn build && node deploy/testnet/deploy-test.js",
    "deploy:mainnet": "yarn build && node deploy/mainnet/deploy-mainnet.js",
    "read:local": "yarn deploy:local && node deploy/local/read-contract-state-local.js",
    "read:testnet": "yarn deploy:testnet && node deploy/testnet/read-contract-state-testnet.js",
    "read:mainnet": "yarn deploy:local && node deploy/mainnet/read-contract-state-mainnet.js",
    "test": "jest"
  },
  "engines": {
    "node": ">=16.5"
  },
  "dependencies": {
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "arlocal": "1.1.26",
    "arweave": "^1.10.23",
    "jest": "^27.5.1",
    "redstone-smartweave": "0.4.51",
    "ts-jest": "^27.1.3"
  }
}
